{
  "name": "clawd-code",
  "version": "1.0.0",
  "description": "An agentic coding tool that lives in your terminal",
  "keywords": [
    "ai",
    "cli",
    "claude",
    "coding",
    "terminal",
    "developer-tools"
  ],
  "author": "Clawd Code Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clawd-code/clawd-code"
  },
  "homepage": "https://github.com/clawd-code/clawd-code#readme",
  "bugs": {
    "url": "https://github.com/clawd-code/clawd-code/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "clawd": "./dist/clawd.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/bin/clawd.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "react": "^18.3.1",
    "yargs": "^17.7.2",
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.3.0",
    "globby": "^14.0.2",
    "minimatch": "^10.0.0",
    "uuid": "^11.0.0",
    "zod": "^3.24.0",
    "diff": "^6.0.0",
    "marked": "^11.0.0",
    "marked-terminal": "^6.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/yargs": "^17.0.33",
    "@types/better-sqlite3": "^7.6.12",
    "@types/diff": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.4.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "@vitest/coverage-v8": "^3.0.0"
  }
}
